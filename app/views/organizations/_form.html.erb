<%= form_with(model: organization) do |form| %>
  <% if organization.errors.any? %>
    <div class="mb-6 p-4 rounded bg-red-100 text-red-800 border border-red-200">
      <h2 class="font-semibold mb-2"><%= pluralize(organization.errors.count, "error") %> prohibited this organization from being saved:</h2>
      <ul class="list-disc list-inside">
        <% organization.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: "block mb-1 font-medium text-gray-700" %>
    <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :slug, class: "block mb-1 font-medium text-gray-700" %>
    <%= form.text_field :slug, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.submit "Save", class: "px-6 py-2 bg-green-600 text-white font-semibold rounded shadow hover:bg-green-700 transition" %>
  </div>
<% end %>