<% if notice %>
  <div class="mb-4 p-3 rounded bg-green-100 text-green-800 border border-green-200">
    <%= notice %>
  </div>
<% end %>

<% content_for :title, "Organizations" %>

<h1 class="text-3xl font-bold mb-6 text-gray-800">Organizations</h1>

<div id="organizations" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
  <% @organizations.each do |organization| %>
    <div class="bg-white shadow rounded-lg p-6 flex flex-col justify-between">
      <%= render organization %>
      <div class="mt-4">
        <%= link_to "Show this organization", organization, class: "inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition" %>
      </div>
    </div>
  <% end %>
</div>

<div class="flex justify-center my-6">
  <%= will_paginate @organizations, class: 'pagination flex space-x-2' %>
</div>

<%= link_to "New organization", new_organization_path, class: "inline-block px-6 py-3 bg-green-600 text-white font-semibold rounded shadow hover:bg-green-700 transition" %>