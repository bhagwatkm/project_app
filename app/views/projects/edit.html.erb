<% content_for :title, "Editing project" %>

<h1 class="text-2xl font-bold mb-6 text-gray-800">Editing project</h1>

<div class="bg-white shadow rounded-lg p-6 mb-6">
  <%= render "form", project: @project %>
</div>

<div class="flex gap-4">
  <%= link_to "Show this project", organization_project_path(@organization,@project), class: "inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition" %>
  <%= link_to "Back to projects", organization_projects_path(@organization), class: "inline-block px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300 transition" %>
</div>
