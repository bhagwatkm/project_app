<%# Notice message %>
<% if notice %>
  <div class="mb-4 p-3 rounded bg-green-100 text-green-800 border border-green-200">
    <%= notice %>
  </div>
<% end %>

<% content_for :title, "Projects" %>

<h1 class="text-3xl font-bold mb-6 text-gray-800">Projects</h1>

<div id="projects" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
  <% @projects.each do |project| %>
    <div class="bg-white shadow rounded-lg p-6 flex flex-col justify-between">
      <%= render project %>
      <div class="mt-4">
        <%= link_to "Show this project",organization_project_path(@organization,project), class: "inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition" %>
      </div>
    </div>
  <% end %>
</div>

<%= will_paginate @projects, class: 'pagination flex justify-center space-x-2' %>
<%= link_to "New project", new_organization_project_path, class: "inline-block px-6 py-3 bg-green-600 text-white font-semibold rounded shadow hover:bg-green-700 transition" %>
