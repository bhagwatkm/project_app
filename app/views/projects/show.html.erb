<% if notice %>
  <div class="mb-4 p-3 rounded bg-green-100 text-green-800 border border-green-200">
    <%= notice %>
  </div>
<% end %>

<div class="bg-white shadow rounded-lg p-6 mb-6">
  <%= render @project %>
</div>

<div class="flex gap-4">
  <%= link_to "Edit this project", edit_organization_project_path(@organization, @project), class: "inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition" %>
  <%= link_to "Back to projects", organization_projects_path(@organization), class: "inline-block px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300 transition" %>
  <%= button_to "Destroy this project", organization_project_path(@organization, @project), method: :delete, data: { confirm: "Are you sure?" }, class: "inline-block px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition" %>
  <%= link_to "List all Tasks", organization_project_tasks_path(@organization, @project), class: "inline-block px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300 transition" %>
  </div>

<!-- Tasks Section -->
<div class="flex items-center justify-between mb-6">
  <h2 class="text-2xl font-bold text-gray-800 flex items-center gap-2">
    <svg class="w-6 h-6 text-indigo-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M3 7h18M3 12h18M3 17h18"></path></svg>
    Tasks

  </h2>
  <%= link_to new_organization_project_task_path(@organization, @project), class: "px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition font-semibold shadow flex items-center gap-2", title: "Create New Task" do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M12 4v16m8-8H4"></path></svg>
    New Task
  <% end %>
</div>
<%= render 'tasks/tasks', tasks: @tasks, project: @project %>