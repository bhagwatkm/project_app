<% content_for :title, "Editing task" %>

<h1 class="text-2xl font-bold mb-6 text-gray-800">Editing task</h1>

<div class="bg-white shadow rounded-lg p-6 mb-6">
  <%= render "form", task: @task %>
</div>

<div class="flex gap-4">
  <%= link_to "Show this task", organization_project_task_path(@organization, @project, @task), class: "inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition" %>
  <%= link_to "Back to tasks", organization_project_tasks_path(@organization, @project), class: "inline-block px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300 transition" %>
</div>