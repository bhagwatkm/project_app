<%= form_with(model: [@organization, @project, task]) do |form| %>
  <% if task.errors.any? %>
    <div class="mb-6 p-4 rounded bg-red-100 text-red-800 border border-red-200">
      <h2 class="font-semibold mb-2"><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul class="list-disc list-inside">
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: "block mb-1 font-medium text-gray-700" %>
    <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block mb-1 font-medium text-gray-700" %>
    <%= form.text_area :description, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :due_date, class: "block mb-1 font-medium text-gray-700" %>
    <%= form.date_field :due_date, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :status, class: "block mb-1 font-medium text-gray-700" %>
    <%= form.select :status, [["Not Started", "not_started"], ["In Progress", "in_progress"], ["Completed", "completed"]], {}, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :priority, class: "block mb-1 font-medium text-gray-700" %>
    <%= form.select :priority, [["High", "high"], ["Medium", "medium"], ["Low", "low"]], {}, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.submit "Save", class: "px-6 py-2 bg-green-600 text-white font-semibold rounded shadow hover:bg-green-700 transition" %>
  </div>
<% end %>